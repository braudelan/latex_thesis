  file = {/home/elan/Zotero/storage/RG68UPE5/Williams et al. - 2018 - Distinct bioenergetic signatures in particulate ve.pdf;/home/elan/Zotero/storage/XNI5Q35L/S0016706118300995.html},
  journal = {Geoderma},
  keywords = {Activation energy,Bioenergetics,Density fractionation,Soil organic matter,Thermal analysis},
