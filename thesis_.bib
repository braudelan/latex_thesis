@article{soares2019,
  title = {Microbial Growth and Carbon Use Efficiency in Soil: {{Links}} to Fungal-Bacterial Dominance, {{SOC}}-Quality and Stoichiometry},
  shorttitle = {Microbial Growth and Carbon Use Efficiency in Soil},
  author = {Soares, Margarida and Rousk, Johannes},
  year = {2019},
  month = apr,
  volume = {131},
