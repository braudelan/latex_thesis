  keywords = {Aggregate dynamics,AMF,arbuscular mycorrhizal fungi,C mic,Carbon sequestration,cation exchange capacity,CEC,CI,Cl,CL,clay,inert carbon,labile fraction,Land use management,Soil aggregation,Soil structure},
