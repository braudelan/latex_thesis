@article{hanselman2004,
  ids = {hanselman2004a},
  title = {A Comparison of in Situ Methods for Measuring Net Nitrogen Mineralization Rates of Organic Soil Amendments},
  author = {Hanselman, Travis A and Graetz, Donald A and Obreza, Thomas A},
  year = {2004},
  volume = {33},
  pages = {1098--1105},
