  title = {Determination of the Fate of {{13C}} Labelled Maize and Wheat Exudates in an Agricultural Soil during a Short-Term Incubation},
  author = {Marx, M. and Buegger, F. and Gattinger, A. and Zsolnay, {\'A} and Munch, J. C.},
  year = {2007},
  volume = {58},
