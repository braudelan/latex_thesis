@article{gebremikael2014,
  ids = {gebremikael2014a},
  title = {Quantifying the Influences of Free-Living Nematodes on Soil Nitrogen and Microbial Biomass Dynamics in Bare and Planted Microcosms},
  author = {Gebremikael, Mesfin Tsegaye and Buchan, David and De Neve, Stefaan},
  year = {2014},
