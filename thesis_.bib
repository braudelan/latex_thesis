  author = {Wallander, H. and Ekblad, A. and Godbold, D. L. and Johnson, D. and Bahr, A. and Baldrian, P. and Bj{\"o}rk, R. G. and {Kieliszewska-Rokicka}, B. and Kj{\o}ller, R. and Kraigher, H. and Plassard, C. and Rudawska, M.},
