  journal = {Soil and Tillage Research},
  keywords = {Dehydrogenase-Glucosidase,MBC,Microbial activity,Microbial biomass carbon and nitrogen,Nutrient uptake,physiological state,temoral variation,Wheat yield},
  language = {en}
}

