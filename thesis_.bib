  journal = {Geoderma},
  keywords = {Aggregate,bare soil,Cation exchange resin (CER),Exopolysaccharide,fallow,Microbial exudates,Protein matrix bonding,Transient binding agents,Water stable aggregate (MWD)},
  language = {en}
}

