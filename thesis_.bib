  copyright = {Copyright \textcopyright{} 2008 WILEY-VCH Verlag GmbH \& Co. KGaA, Weinheim},
  file = {/home/elan/Zotero/storage/2F6UW4NC/Lützow et al. - 2008 - Stabilization mechanisms of organic matter in four.pdf;/home/elan/Zotero/storage/JRARR66Z/Lützow et al. - 2008 - Stabilization mechanisms of organic matter in four.pdf},
