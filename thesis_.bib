}

@article{baldrian2013,
  title = {Estimation of Fungal Biomass in Forest Litter and Soil},
  author = {Baldrian, Petr and V{\v e}trovsk{\'y}, Tom{\'a}{\v S} and Cajthaml, Tom{\'a}{\v S} and Dobi{\'a}{\v S}ov{\'a}, Petra and Petr{\'a}nkov{\'a}, Mirka and {\v S}najdr, Jaroslav and Eichlerov{\'a}, Ivana},
