@article{baldock2000,
  title = {Baldock, {{J}}. {{A}}., \& {{Skjemstad}}, {{J}}. {{O}}. (2000). {{Role}} of the Soil Matrix and Minerals in Protecting Natural Organic Materials against Biological Attack. {{Organic Geochemistry}}, 31, 697\textendash 710.},
  author = {Baldock, J A and Skjemstad, J O},
