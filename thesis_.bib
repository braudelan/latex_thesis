@article{shi2017,
  ids = {shi2017a},
  title = {Soil Respiration and Microbial Biomass in Multiple Drying and Rewetting Cycles \textendash{} {{Effect}} of Glucose Addition},
  author = {Shi, Andong and Marschner, Petra},
  year = {2017},
